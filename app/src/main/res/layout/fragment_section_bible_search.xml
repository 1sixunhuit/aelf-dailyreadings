    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorLectureBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
